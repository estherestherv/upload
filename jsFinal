         alert(name + " , Welcome to Sofia's World");

         var repeat, friends =[];

         while(repeat !== "no"){
         	friends.push(prompt("What are the names of Sofia's friend?  "));
         	repeat = prompt("Do yo know more freinds? yes/no");
         	document.write(friends + "<br />");
         }

